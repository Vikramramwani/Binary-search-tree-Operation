#include<stdio.h>
#include<conio.h>
#include<math.h>
void main()
{
    float sum=0;
    int n,x,i,fact=1,j;
    printf("Enter value of x and n");
    scanf("%d%d",&x,&n);
    for(i=1;i<=n;i+=2)
    {
        for(j=1;j<=n;j+=2)
        {
            fact=fact*j;
        }
        sum=sum+ (pow(x,i))/fact;
    }
    printf("%f",sum);
}
